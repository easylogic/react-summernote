{
    "compilerOptions": {
      "outDir": "./dist",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "lib": ["dom", "es2015"],
      "noImplicitAny": true,
      "module": "esnext",
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "preserveConstEnums": true,
      "removeComments": false,
      "skipLibCheck": true,
      "sourceMap": true,
      "target": "es5",
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "rootDirs": ["src", "src/stories"],
      "paths": {
          "src": ["./src"]
      }
    },
    "exclude": ["node_modules", "config/", "dist/"],
    "include": ["src/**/*", "src/stories/**/*", "types/index.d.ts"],
  }